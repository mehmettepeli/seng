<%= form_for(@activity, html: {multipart: true}) do |f| %>


<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Yeni Etkinlik</h3>
    </div>
    <div class="panel-body bg-info">
      <form class="form-signin" style="" method="post" action="/activities">


        <%= form_for(@activity) do |f| %>
            <% if @activity.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

                  <ul>
                    <% @activity.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <div class="field">
              <%= f.label :title %><br>
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <%= f.label :adate %><br>
              <%= f.datetime_select :adate %>
            </div>
            <div class="field">
              <%= f.label :content %><br>
              <%= f.text_area :content %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
            <%= link_to 'Geri', activities_path %>

            </form>
    </div>

  </div>

<% end %>
<%end%>

</div>
<script>
    $( document ).ready(function() {
        $("input[type=text]").addClass("form-control");
        $("input[type=password]").addClass("form-control");
        $("input[type=submit]").addClass("btn btn-success");
       // $("select").addClass("form-control");
        $("textarea").addClass("form-control")
        //$("select").width("100px");
        $("select").css( "padding", "10px" );
    });
</script>
